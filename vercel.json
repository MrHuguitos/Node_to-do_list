{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "front-end/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/auth/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/tasks(.*)",
            "dest": "server.js"
        },
        {
            "src": "/",
            "dest": "/front-end/index.html"
        },
        {
            "src": "/login",
            "dest": "/front-end/login.html"
        },
        {
            "src": "/(.*)",
            "dest": "/front-end/$1"
        }
    ]
}